<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/asclepius"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_asclepius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/asclepius"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_asclepius"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="16dp"
            app:srcCompat="@drawable/asclepius"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/asclepius"
        android:ellipsize="end"
        android:textSize="13sp"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="@id/card_asclepius"
        app:layout_constraintStart_toStartOf="@id/card_asclepius"
        app:layout_constraintTop_toBottomOf="@id/card_asclepius" />

</androidx.constraintlayout.widget.ConstraintLayout>